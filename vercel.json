{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "DB_HOST": "@db-host",
    "DB_NAME": "@db-name",
    "DB_USER": "@db-user",
    "DB_PASS": "@db-pass",
    "DB_CHARSET": "utf8mb4"
  },
  "build": {
    "env": {
      "DB_HOST": "@db-host",
      "DB_NAME": "@db-name",
      "DB_USER": "@db-user",
      "DB_PASS": "@db-pass",
      "DB_CHARSET": "utf8mb4"
    }
  }
}